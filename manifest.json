{
  "manifest_version": 3,
  "name": "ytc-bridge",
  "version": "1.1.0",
  "description": "Acts as a proxy to enable requests to YouTube services.",
  "permissions": [
    "declarativeNetRequest"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "host_permissions": [
    "*://localhost/*",
    "*://yt-shaka-player.pages.dev/*",
    "*://kira.ytjs.dev/*",
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*",
    "*://*.googleusercontent.com/*",
    "*://*.ytimg.com/*",
    "*://*.ggpht.com/*"
  ],
  "background": {
    "service_worker": "dist/background.bundle.js",
    "scripts": [
      "dist/background.bundle.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://yt-shaka-player.pages.dev/*",
        "*://kira.ytjs.dev/*"
      ],
      "js": [
        "dist/content.bundle.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/injected.bundle.js"
      ],
      "matches": [
        "*://localhost/*",
        "*://yt-shaka-player.pages.dev/*",
        "*://kira.ytjs.dev/*"
      ]
    }
  ]
}